pipeline {
    agent {
        docker {
            image 'docker:stable'
            args '-v /var/run/docker.sock:/var/run/docker.sock'
        }
    }
    environment {
        DOCKER_IMAGE = 'simple-node-app' // Nom de votre image Docker
        DOCKER_TAG = "latest" // Tag de votre image Docker
        NEXUS_URL = 'http://localhost:8082' // URL de votre Nexus
        NEXUS_REPO = 'repo1' // Nom de votre repository Nexus
        NEXUS_CREDENTIALS_ID = 'nexus' // ID des credentials Nexus dans Jenkins
    }
    stages {
        stage('Build') {
            steps {
                script {
                    docker.build("${DOCKER_IMAGE}:${DOCKER_TAG}", 'app')
                }
            }
        }
        stage('Push to Nexus') {
            steps {
                withCredentials([usernamePassword(credentialsId: "${NEXUS_CREDENTIALS_ID}", usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                    script {
                        // Login to Nexus Docker registry
                        sh "docker login -u ${USERNAME} -p ${PASSWORD} ${NEXUS_URL}"

                        // Tag the image
                        sh "docker tag ${DOCKER_IMAGE}:${DOCKER_TAG} ${NEXUS_URL}/${NEXUS_REPO}/${DOCKER_IMAGE}:${DOCKER_TAG}"

                        // Push the image
                        sh "docker push ${NEXUS_URL}/${NEXUS_REPO}/${DOCKER_IMAGE}:${DOCKER_TAG}"
                    }
                }
            }
        }
    }
    post {
        always {
            script {
                // Cleanup Docker images to save space
                sh "docker rmi ${DOCKER_IMAGE}:${DOCKER_TAG} || true"
                sh "docker rmi ${NEXUS_URL}/${NEXUS_REPO}/${DOCKER_IMAGE}:${DOCKER_TAG} || true"
            }
        }
    }
}
